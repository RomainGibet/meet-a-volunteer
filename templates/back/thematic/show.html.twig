{% extends 'base.html.twig' %}

{% block title %}Thematic{% endblock %}

{% block body %}
    <h1>Thematic</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ thematic.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ thematic.name }}</td>
            </tr>
            <tr>
                <th>SlugName</th>
                <td>{{ thematic.slugName }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ thematic.createdAt ? thematic.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ thematic.updatedAt ? thematic.updatedAt|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('app_back_thematic_index') }}">Back to list</a>

    <a class="btn btn-success" href="{{ path('app_back_thematic_edit', {'id': thematic.id}) }}">Edit</a>

    {{ include('back/thematic/_delete_form.html.twig') }}
{% endblock %}
